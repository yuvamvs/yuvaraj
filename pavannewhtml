<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Combined Page</title>
    <style>
        .page {
            display: none;
        }
        .active {
            display: block;
        }
    </style>
</head>
<body>
    <h1>Welcome to the Combined Page</h1>

    <!-- Page 1 -->
    <div class="page active" id="page1">
        <h2>Welcome to yuvi page</h2>
        <p>This is the first page.</p>
        <button onclick="showPage('page2')">Go to Page 2</button>
    </div>

    <!-- Page 2 -->
    <div class="page" id="page2">
        <h2>Welcome to pavan </h2>
        <p>This is the second page.</p>
        <button onclick="showPage('page1')">Go back to Page 1</button>
        <button onclick="showPage('page3')">Go to Page 3</button>
    </div>

    <!-- Page 3 -->
    <div class="page" id="page3">
        <h2>Welcome to Page 3</h2>
        <p>This is the third page.</p>
        <button onclick="showPage('page2')">Go back to Page 2</button>
    </div>

    <script>
        function showPage(pageId) {
            // Hide all pages
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => {
                page.classList.remove('active');
            });

            // Show the selected page
            const selectedPage = document.getElementById(pageId);
            selectedPage.classList.add('active');
        }
    </script>
</body>
</html>
